<div class="container mx-auto mt-4">
  <h1 class="text-center mt-4">Products List</h1>
  <div class="container mx-auto mt-4">
      {{#if products.length }}
      <table id="tableProduct" class="table table-striped table-hover">
          <thead>
              <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Description</th>
              <th scope="col">Code</th>
              <th scope="col">Price</th>
              <th scope="col">Stock</th>
              <th scope="col">Category</th>
              <th scope="col">Thumbnail</th>
              </tr>
          </thead>
          {{#each products}}
              <tbody>
                  <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.code}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.category}}</td>
                    <td>
                      <img
                          class="img"
                          src="{{this.thumbnail}}"
                          alt="Product Image"
                      />
                    </td>
                  </tr>
              </tbody>
          {{/each}}
          </table>
          {{else}}
              <h3 class="text-center">There are no products!</h3>
          {{/if}}
  </div>
</div>
<div class="container mx-auto d-flex justify-content-between">
  <div class="col-md-7 d-inline-flex p-2">
        <form id="addProduct" class="card card-body rounded-0 text-center">
            <h3 class="mb-5">Add a Product</h3>
            <input type="text" required id="title" name="title" placeholder="Name" class="form-control rounded-0 mb-3">
            <input type="text" required id="description" name="description" placeholder="Description" class="form-control rounded-0 mb-3">
            <input type="text" required id="code" name="code" placeholder="Code" class="form-control rounded-0 mb-3">
            <input type="number" required id="price" name="price" placeholder="Price" class="form-control rounded-0 mb-3">
            <input type="number" required id="stock" name="stock" placeholder="Stock" class="form-control rounded-0 mb-3">
            <input type="text" required id="category" name="category" placeholder="Category" class="form-control rounded-0 mb-3">
            <input type="text" required id="thumbnail" name="thumbnail" placeholder="Url Image" class="form-control rounded-0 mb-3">
            <input class="btn btn-success rounded-0 mb-3" type="submit" value="Submit">
        </form>
    </div>
    <div class="col-md-3 d-inline-flex p-2">
        <form id="formDelete" class="card card-body rounded-0 text-center">
            <h3 class="mb-5">Delete a Product</h3>
            <input type="text" required id="deleteProduct" name="deleteProduct" placeholder="Id Product" class="form-control rounded-0 mb-3">
            <input class="btn btn-danger rounded-0 mb-3" type="submit" value="Delete">
        </form>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/static/assets/js/realTimeProducts.js"></script>
<script src=" https://cdn.jsdelivr.net/npm/sweetalert2@11.7.1/dist/sweetalert2.all.min.js"></script>