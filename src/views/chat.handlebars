<h1 class="text-center p-3">Chat</h1>
<form class="container mx-auto">
  <div class="mb-2">
    <label for="email">Email:</label>
    <input type="email" id="email" class="form-control rounded-0 mb-3" required/>
  </div>
  <div class="mb-2">
    <label for="message">Message:</label>
    <input type="text" id="message" class="form-control rounded-0 mb-3" required/>
  </div>
  <button type="submit" class="btn btn-success rounded-0 mb-3">Send</button>
</form>
<div class="container mt-3">
  <ul class="p-0" id="chatMessages">
    {{#each messages}}
    <div class="bg-info-subtle">
      <p class="fs-5 fw-bold">{{this.email}}: </p>
      <p class="fs-5">
        {{this.message}}
      </p>
    </div>
    {{/each}}
  </ul>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/static/assets/js/chat.js"></script>
<script src=" https://cdn.jsdelivr.net/npm/sweetalert2@11.7.1/dist/sweetalert2.all.min.js"></script>